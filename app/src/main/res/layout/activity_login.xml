<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity" android:background="@drawable/background_register">

    <Button
            android:text="login"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:id="@+id/btn_login_login" app:layout_constraintEnd_toEndOf="@+id/et_password_login"
            app:layout_constraintStart_toStartOf="@+id/et_password_login" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/et_password_login" app:layout_constraintHorizontal_bias="0.496"
            android:background="@drawable/btn_register_rounded" android:textColor="@android:color/white"
            android:textStyle="bold" android:textSize="18sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email_login"
            android:background="@drawable/et_register_rounded" android:layout_marginTop="268dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:hint="Email" android:textAlignment="center"
            android:textSize="24sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password_login"
            android:background="@drawable/et_register_rounded"
            app:layout_constraintEnd_toEndOf="@+id/et_email_login" app:layout_constraintStart_toStartOf="@+id/et_email_login"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/et_email_login"
            android:textAlignment="center" android:hint="Password" android:textSize="24sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>