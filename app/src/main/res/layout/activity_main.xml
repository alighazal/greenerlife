<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/background_register">


    <EditText
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_email_register"
            android:background="@drawable/et_register_rounded"
            android:layout_width="0dp" android:hint="Email" android:textAlignment="center" android:textSize="24sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_name_register"
            app:layout_constraintEnd_toEndOf="@+id/et_name_register"
            app:layout_constraintStart_toStartOf="@+id/et_name_register"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password_register"
            android:background="@drawable/et_register_rounded"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/et_email_register"
            android:hint="Password" android:textSize="24sp" android:textAlignment="center"
            android:paddingEnd="0dp"
            app:layout_constraintStart_toStartOf="@+id/et_email_register"
            app:layout_constraintEnd_toEndOf="@+id/et_email_register"/>
    <Button
            android:text="Sign up"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_register_rounded"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:id="@+id/btn_signup_register" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/et_password_register"
            app:layout_constraintEnd_toEndOf="@+id/et_password_register"
            app:layout_constraintStart_toStartOf="@+id/et_password_register" android:textSize="18sp"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_name_register"

            android:textAlignment="center" android:hint="Name" android:textSize="24sp" android:layout_marginTop="168dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            android:background="@drawable/et_register_rounded" android:width="50dp" android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    <TextView
            android:text="already have an account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_login_register"
            android:textColor="@android:color/white" android:textStyle="bold"
            android:textSize="18sp" app:layout_constraintEnd_toEndOf="@+id/btn_signup_register"
            app:layout_constraintStart_toStartOf="@+id/btn_signup_register" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_signup_register"
            app:layout_constraintHorizontal_bias="0.494"/>
</androidx.constraintlayout.widget.ConstraintLayout>